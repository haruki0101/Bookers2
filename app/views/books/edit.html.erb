<% if @book.errors.any? %>
          <div id="error_explanation">
              <h2><%= @book.errors.count %>件のerrorが発生しました。</h2>
                <ul>
                  <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                  <% end %>
                </ul>
           </div>
<% end %>
<h1>Editing Book</h1>
<!-- form_for部分 -->
<%= form_for(@book, url:book_path) do |f| %>
    <h4>タイトル</h4>
    <%= f.text_field :title %>
    <h4>本文</h4>
    <%= f.text_area :body %><br>
    
    <%= f.submit 'Update Book' %><br>
     <%= link_to "Show",book_path(@book.id) %>|<%= link_to "Back",books_path %>
<% end %>