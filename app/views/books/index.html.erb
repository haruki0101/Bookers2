<div class="container">
	<% if flash[:success] %>
      <div class="flash">
        <%= flash[:success] %>
      </div>
    <% end %>

        <% if @book.errors.any? %>
          <div id="error_explanation">
              <h2><%= @book.errors.count %>件のerrorが発生しました。</h2>
                <ul>
                  <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                  <% end %>
                </ul>
            </div>
          <% end %>

  <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>
      <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
      <table class="table">
      	
      	  <tbody>
      	  	<tr></tr>
      		<tr>
      			<th>name</th>
      			<th><%= current_user.name %></th>
      		</tr>
      		<tr>
      			<th>introduction</th>
      			<th><%= current_user.introduction %></th>
      		</tr>
      	</tbody>
      </table>
      <div class="row">
        <p><%= link_to "", edit_user_path(current_user), class:"btn btn-primary" ,class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_11709"%></p>
  
</div>
      <h2>New book</h2>
      <%= form_for(@book, url: books_path) do |f| %>


      <div class="field row">
      	<%= f.label :title, "Title" %>
        <%= f.text_field :title ,class:"col-xs-12"%>
    </div>
    <div class="field row">
    	<%= f.label :body, "Opinion" %>
        <%= f.text_area :body ,class:"col-xs-12"%>
    </div>
    <div class="actions row">
        <%= f.submit "Create Book" ,class:"btn btn-primary col-xs-12"%>
    </div>
        <% end %>
    </div>

<div class="col-xs-9">
<h1>Books</h1>
<table class="table">
	<thead>
		<tr>
			<th></th>
			<th>title</th>
			<th>Opinion</th>
		</tr>
	</thead>
	<% @books.each do |book| %>
	<tbody>
		<tr>
			<td><%= link_to(user_path(book.user)) do %><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %><% end %></td>
			<td><%= link_to(book_path(book)) do %><%= book.title %><% end %></td>
			<td><%= book.body %></td>
		</tr>
	</tbody>
	<% end %>
</table>
</div>
</div>
</div>