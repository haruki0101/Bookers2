<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>
      <%= form_for(@user, url:user_path) do |f| %>
      <label>Name</label>
        <%= f.text_field :name %>
       <label>ProfileImage</label>
    <%= f.attachment_field :profile_image %>
    	<label>Introduction</label>
    <%= f.text_field :introduction %>
    <%= f.submit "Update User" %>
    <% end %>
    </div>
  </div>
</div>
   